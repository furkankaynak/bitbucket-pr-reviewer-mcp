{
  "name": "bitbucket-pr-reviewer-mcp",
  "version": "1.0.0",
  "description": "MCP Server for Bitbucket PR Reviewer",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "bitbucket-pr-reviewer": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && node -e \"const fs = require('fs'); const content = fs.readFileSync('./dist/index.js', 'utf8'); fs.writeFileSync('./dist/index.js', '#!/usr/bin/env node\\n' + content);\" && chmod 755 dist/index.js",
    "build:win": "tsc && node -e \"const fs = require('fs'); const content = fs.readFileSync('./dist/index.js', 'utf8'); fs.writeFileSync('./dist/index.js', '#!/usr/bin/env node\\\\n' + content);\"",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "clean": "rm -rf dist",
    "prepare": "husky",
    "test": "jest",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,md,json,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,md,json,yml,yaml}\"",
    "pre-commit": "npm run lint && npm run format && npm run build"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "bitbucket",
    "pr-reviewer"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.17.57",
    "@types/sqlite3": "^3.1.11",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "shebang-command": "^2.0.0",
    "shebang-loader": "^0.0.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "axios": "^1.6.7",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "zod": "^3.25.45"
  }
}
